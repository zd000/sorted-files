{
	"name": "sorted-files",
	"displayName": "Sorted Files",
	"description": "",
	"version": "1.0.0",
	"publisher": "ZhenDong",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sortedFiles.sortedFiles",
		"onView:sortedFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
			  "view": "sortedFiles",
			  "contents": "Open a folder to show sorted files inside and watch changes.\n[Open Folder](command:sortedFiles.openFolder)"
			}
		],
		"configuration": [
			{
				"title": "Sorted Files",
				"properties": {
					"sortedFiles.maxItems": {
						"type": "integer",
						"default": 20
					},
					"sortedFiles.pattern": {
						"type":"string",
						"default": "\\.md$"
					}
				}
			}
		],
		"commands": [
			{
				"command": "sortedFiles.sortedFiles",
				"title": "Sorted Files"
			},
			{
				"command": "sortedFiles.openFolder",
				"title": "Open Folder",
				"icon": {
					"light": "resources/light/folder.svg",
					"dark": "resources/dark/folder.svg"
				  }
			},
			{
				"command": "sortedFiles.modifiedTime",
				"title": "By Modified Time"
			},
			{
				"command": "sortedFiles.creationTime",
				"title": "By Creation Time"
			},
			{
				"command": "sortedFiles.fileName",
				"title": "By File Name"
			},
			{
				"command": "sortedFiles.fileSize",
				"title": "By File Size"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "sortedFiles",
					"name": "Sorted Files"
				}
			]
		},
		"menus": {
			"view/title": [
			  {
				"command": "sortedFiles.openFolder",
				"when": "view == sortedFiles",
				"group": "navigation"
			  },
			  {
				"command": "sortedFiles.modifiedTime",
				"when": "view == sortedFiles"
			  },
			  {
				"command": "sortedFiles.creationTime",
				"when": "view == sortedFiles"
			  },
			  {
				"command": "sortedFiles.fileName",
				"when": "view == sortedFiles"
			  },
			  {
				"command": "sortedFiles.fileSize",
				"when": "view == sortedFiles"
			  }
			]
		  }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
